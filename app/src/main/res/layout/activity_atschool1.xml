<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kenneth1993.education.Application_ListView_Atschool1"
    android:background="@drawable/background_school"
    android:layout_weight="3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.kenneth1993.education.Application_Atschool_For_Draw1
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="14"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="40dp"
                    android:textSize="10dp"
                    android:text="복습 #2"
                    android:background="#88111111"
                    android:textColor="#ffffff"
                    android:id="@+id/textView" />

            </LinearLayout>

            <ScrollView
                android:paddingTop="16dp"
                android:paddingLeft="35dp"
                android:background="#88111111"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cpu_00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="10dp"
                        />
                    <TextView
                        android:id="@+id/user_00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff00ff"
                        android:textSize="10dp"
                        android:text=""/>

                    <TextView
                        android:id="@+id/cpu_01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#ffffff"
                        />
                    <TextView
                        android:id="@+id/user_01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff00ff"
                        android:textSize="10dp"
                        android:text=""/>

                    <TextView
                        android:id="@+id/cpu_02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#ffffff"
                        />
                    <TextView
                        android:id="@+id/user_02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff00ff"
                        android:textSize="10dp"
                        android:text=""/>


                    <TextView
                        android:id="@+id/cpu_03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#ffffff"
                        />

                    <TextView
                        android:id="@+id/user_03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff00ff"
                        android:textSize="10dp"
                        android:text=""/>

                    <TextView
                        android:id="@+id/cpu_04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#ffffff"
                        />

                    <TextView
                        android:id="@+id/user_04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff00ff"
                        android:textSize="10dp"
                        android:text=""/>

                    <TextView
                        android:id="@+id/cpu_05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#ffffff"
                        />

                    <TextView
                        android:id="@+id/user_05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff00ff"
                        android:textSize="10dp"
                        android:text=""/>

                    <TextView
                        android:id="@+id/cpu_06"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#ffffff"
                        />

                    <TextView
                        android:id="@+id/user_06"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff00ff"
                        android:textSize="10dp"
                        android:text=""/>
                </LinearLayout>


            </ScrollView>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_0"
            android:textSize="10sp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:onClick="ClickBtn0"
            android:layout_marginLeft="97dp"
            android:layout_marginStart="97dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_1"
            android:textSize="10sp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:onClick="ClickBtn1"

            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_0"
            android:layout_toEndOf="@+id/btn_0" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_2"
            android:textSize="10sp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_0"
            android:layout_alignLeft="@+id/btn_0"
            android:layout_alignStart="@+id/btn_0"
            android:onClick="ClickBtn2"

            />

        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_3"
            android:textSize="10sp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_1"
            android:layout_alignLeft="@+id/btn_1"
            android:layout_alignStart="@+id/btn_1"
            android:onClick="ClickBtn3"
            />

    </RelativeLayout>








</LinearLayout>
